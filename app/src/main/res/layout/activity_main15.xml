<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main15Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:background="#ADD6FF"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adriann from home to dacing           ..."
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:layout_marginTop="25sp"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"></TextView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="20dp">
        <ImageView
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/usuario4"
            android:layout_height="42dp"
            android:layout_alignParentRight="false"></ImageView>
        <ImageView
            android:layout_width="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/llamada"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"></ImageView>

        <TextView
            android:id="@+id/text222"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="10dp"
            android:text="Driver"
            android:textColor="#858585"
            android:textSize="12sp"></TextView>
        <TextView
            android:id="@+id/textC"
            android:layout_width="300dp"
            android:layout_below="@+id/text222"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="90dp"
            android:layout_marginBottom="10dp"
            android:text="Johan Johnson"
            android:textColor="#000000"
            android:textSize="12sp"></TextView>
        <TextView
            android:layout_below="@+id/textC"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="10dp"
            android:text="tue, jul 4, 12:15 pm - 12:30 pm"
            android:textColor="#9C9C9C"
            android:textSize="12sp"></TextView>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/mapa222"
        android:onClick="mapa"></ImageView>
</LinearLayout>
